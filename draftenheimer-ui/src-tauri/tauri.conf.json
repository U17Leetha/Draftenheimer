{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Draftenheimer",
  "version": "0.1.0",
  "identifier": "com.draftenheimer.desktop",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Draftenheimer",
        "width": 1220,
        "height": 860,
        "minWidth": 980,
        "minHeight": 700
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
